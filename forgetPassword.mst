{{> header}}

<form method="POST">

        <label>
           Nova senha:
            <input type="password" name="password" placeholder="Senha" value="{{user.password}}"/>
        </label>
        
        <label>
            Confirme nova Senha:
            <input type="password" name="password-confirm" placeholder="Senha" value="{{user.password}}"/>
        </label>
        <input type="submit" value="Salvar" class="btn btn-blue-bc">

</form>